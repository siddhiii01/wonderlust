<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
    <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
      crossorigin="anonymous">
      <!-- Bootstrap JS (Bundle includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
        crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/login.css">
  <!-- <script src="/js/script.js"></script> -->
 
</head>
   <body class="login-page">
  <div class="login-container">
    <div class="login-card shadow">
      <h2 class="login-title text-center mb-3">Login</h2>
      <p class="login-subtitle text-center mb-4">Access your account</p>

      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input 
            type="text" 
            id="username" 
            class="form-control login-input" 
            name="username" 
            required
          >
           <!--  Bootstrap invalid feedback -->
          <div class="invalid-feedback">Please enter your username</div>
          <!--Bootstrap invalid feedback -->
        </div>

        <div class="mb-4">
          <label for="password" class="form-label">Password</label>
          <input 
            type="password" 
            id="password" 
            class="form-control login-input" 
            name="password" 
            required
          >
          <div class="invalid-feedback">Password should be valid</div>
        </div>

        <button class="btn login-btn w-100 mb-3">Login</button>
      </form>

      <p class="signup-text text-center">
        Donâ€™t have an account? 
        <a href="/signup" class="signup-link">Sign up</a>
      </p>
    </div>
  </div>
</body>



</html>

<script>

// Bootstrap validation
(function () {
  'use strict'

  // Fetch all forms with needs-validation
  var forms = document.querySelectorAll('.needs-validation')

  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
})()

</script>

